@model IEnumerable<Nimap_Machine_Test.ViewModels.CategoryViewModel>
@{
    ViewData["Title"] = "Category Details";
}

<div class="container p-4">
    <div class="row">
        <div class="col-md-12">
            <h3 class="p-4">Categories</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 p-4">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Category Id</th>
                        <th scope="col">Category Name</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                  @if (Model != null && Model.Any())
                    {
                        @foreach (var category in Model)
                        {
                            <tr>
                                <th scope="row">@category.CategoryId</th>
                                <td>@category.CategoryName</td>
                                <td><a class="btn btn-dark" asp-action="Edit" asp-controller="Category" asp-route-id="@category.CategoryId">Edit</a></td>
                                <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@category.CategoryId" onClick="return confirm('Are you sure you want to delete this category?')">Delete</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>